<div class="modal fade" id.image {
    width: 200px;
  height: 200px;
  background-image: url(image-path("puddle.jpeg"));
  background-size: cover;
}="service-modal-<%#= @service %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="serviceModalTitle"><%#= @service%></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div>
                <img class="img-fluid" <%= image_tag service.picture if service.picture.attached? %>/1200/600'>
            </div>
             <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
